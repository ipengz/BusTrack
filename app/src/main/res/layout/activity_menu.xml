<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ku.bustrack.MenuActivity">

    <Button
        android:id="@+id/btn_locatebus"
        android:layout_width="143dp"
        android:layout_height="46dp"
        android:text="Locate Bus"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="41dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.502" />

    <Button
        android:id="@+id/btn_businfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bus Information"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_locatebus"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/btn_update"
        android:layout_width="151dp"
        android:layout_height="51dp"
        android:text="Update Bus"
        android:layout_marginTop="45dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_businfo"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.502" />

    <Button
        android:id="@+id/btn_buslist"
        android:layout_width="149dp"
        android:layout_height="50dp"
        android:text="Bus List"
        android:layout_marginTop="45dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_update"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.502" />

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="147dp"
        android:layout_height="49dp"
        android:text="LOGOUT"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_buslist"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />
</android.support.constraint.ConstraintLayout>
